{
    "$schema": "./node_modules/turbo/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": ["dist/**", "build/**"]
        },
        "lint": {
            "dependsOn": ["^lint"],
            "outputs": []
        },
        "type:checks": {
            "dependsOn": ["^type:checks"],
            "outputs": []
        },
        "dev": {
            "dependsOn": ["^start", "^dev"],
            "cache": false,
            "persistent": true
        },
        "test": {
            "dependsOn": ["^test"],
            "inputs": ["$TURBO_DEFAULT$"],
            "outputs": []
        }
    }
}
